<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEGP7.Authentication.ResetPasswordPage"
             Title="Reset Password">
    <Grid>
        <StackLayout>
            <Label Margin="5,5" Text="Email:" FontSize="32" />
            <Border Margin="10,10,10,0" Stroke="Black">
                <Entry Text="{Binding Email}" Placeholder="Enter email" FontSize="32"/>
            </Border>
            <Label Margin="5,5" Text="Please enter your email and click reset password to reset your password." FontSize="16"/>
            <HorizontalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Button Text="Reset Password" Clicked="ResetPasswordButtonPushed" WidthRequest="150" Margin="25"/>
                <Button Text="Cancel" Clicked="CancelResetPasswordButtonPushed" WidthRequest="150" Margin="25"/>
            </HorizontalStackLayout>

        </StackLayout>
    </Grid>
</ContentPage>