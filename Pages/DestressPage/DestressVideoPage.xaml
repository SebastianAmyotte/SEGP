<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SEGP.Pages.DestressVideoPage"
             Title="Destress">
    <Grid BackgroundColor="AntiqueWhite">
        
        <Button BackgroundColor="White" Pressed="CountdownTapped"></Button>
        <Image x:Name="backgroundImage" HeightRequest="1000"></Image>
        <Label x:Name="ProgressButton" 
            Text=""
            FontSize="30"
            TextColor="Black"
            FontFamily="fa-regular"
            HeightRequest="80"
            WidthRequest="80"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>
        <GraphicsView x:Name="ProgressView"
	        BackgroundColor="PaleTurquoise"
	        HeightRequest="250"
	        WidthRequest="250"/>
        
    </Grid>
</ContentPage>