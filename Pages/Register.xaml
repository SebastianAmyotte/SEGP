<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEGP.Pages.Register"
             Title="Registration">
    <Grid>
        <StackLayout>
            <Label Margin="5,5" Text="Email:" FontSize="32" />
            <Entry x:Name="email" Margin="5,5" Placeholder="Enter email" FontSize="32"/>
            <Label Margin="5,5" Text="Your email is used to reset your password if you forget it." FontSize="16"/>
            <Label Margin="5,5" Text="Password:" FontSize="32"/>
            <Entry x:Name="password" Margin="5,5" Placeholder="Password" IsPassword="True" FontSize="32" MaxLength="25"/>
            <Label Margin="5,5" Text="Password must be at least 9 characters long and contain at least 1 number. 
Passwords are case sensitive, can include symbols, and can be up to 25 characters long."
                   FontSize="16"/>
            <HorizontalStackLayout>
                <Button Text="Register" Clicked="RegisterUserClicked"/>
                <Button Text="Cancel" Clicked="CancelRegistrationClicked" />
            </HorizontalStackLayout>
            
        </StackLayout>
    </Grid>

</ContentPage>