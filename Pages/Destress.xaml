<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEGP.Pages.Destress"
             Title="De-stress">
    <StackLayout>
        <Label 
            Text="De-stress Setup"
            HorizontalOptions="Center"
            FontSize="32"/>
        <Border Margin="5">
        <HorizontalStackLayout HorizontalOptions="Start" Margin="10" >
            <Label Text="Duration: " VerticalOptions="Center" Margin="5" FontSize="22"/>
            <Entry Placeholder="30 seconds" FontSize="22" WidthRequest="250"/>
        </HorizontalStackLayout>
        </Border>
        <Border Margin="5">
        <HorizontalStackLayout HorizontalOptions="Start" Margin="10">
            <Label Text="Sound: " VerticalOptions="Center" Margin="5" FontSize="22"/>
            <Entry Placeholder="Ocean waves" FontSize="22" WidthRequest="250"/>
        </HorizontalStackLayout>
        </Border>
        <Border Margin="5">
        <HorizontalStackLayout HorizontalOptions="Start" Margin="10">
            <Label Text="Backgrounds: " VerticalOptions="Center" Margin="5" FontSize="22"/>
            <Entry Placeholder="Forest" FontSize="22" WidthRequest="250"/>
        </HorizontalStackLayout>
        </Border>
        <Button Text="Start de-stressing" WidthRequest="250" FontSize="22"/>
    </StackLayout>
</ContentPage>