<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEGP7.Pages.DestressVideoPage"
             Title="DestressVideoPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">
    <Grid BackgroundColor="AntiqueWhite">
        <Image x:Name="backgroundImage" Aspect="AspectFill" HeightRequest="1000"></Image>
        
        <GraphicsView x:Name="ProgressView"
	        BackgroundColor="PaleTurquoise"
	        HeightRequest="250"
	        WidthRequest="250"/>
        
        <Label x:Name="ProgressButton" 
            Text=""
            FontSize="30"
            TextColor="White"
            HeightRequest="80"
            WidthRequest="80"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            BackgroundColor="Transparent"/>

        <Button BackgroundColor="Transparent" Pressed="CountdownTapped"></Button>
    </Grid>
</ContentPage>