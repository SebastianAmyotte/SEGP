<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEGP.Pages.Login"
             Title="Login">
    <Grid>
        <StackLayout>

            <Label x:Name="useremail" Margin="5,5" Text="Email:" FontSize="32" />
            <Entry Margin="5,5"  Placeholder="Email" FontSize="32" />

            <Label  x:Name="userpassword" Margin="5,5" Text="Password:" FontSize="32"/>
            <Entry  Margin="5,5"  Placeholder="Password" FontSize="32" IsPassword="True" HorizontalOptions="Fill"/>

            <VerticalStackLayout>
                <Button Text="Login" />
                <Button Text="Register" Clicked="OnRegisterClicked"/>
                <Button Text="Cancel" Clicked="OnCancelClicked" />
                <Button Text="Forgot Password?" Clicked="OnForgotPasswordClicked"/>
            </VerticalStackLayout>

        </StackLayout>
    </Grid>
</ContentPage>